---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="AWC" description="AWC">
  <Navbar />
  <main>
    <section class="container mx-auto">
      <div class="h-[calc(100vh-100px)] flex">
        <div
          class="flex-1 flex flex-col items-start justify-center gap-20 -mt-[3vh]"
        >
          <h1 class="text-8xl">
            One-stop solution <br /> for all your logistics <br /> requirements
          </h1>
          <div class="flex items-center justify-start gap-5">
            <button class="bg-black px-8 py-4 text-white">Get Started</button>
            <button class="px-8 py-4 hover:bg-gray-100"
              >{"-> "}Request a quote</button
            >
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
