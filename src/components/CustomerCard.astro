---
import Icon from "astro-icon";

export interface Props {
  label: string;
  icon: string;
}

const { label, icon } = Astro.props;
---

<div
  class="flex items-center gap-2 bg-[#FFEED1] text-[#DD7A00] px-6 py-3 text-sm"
>
  <Icon pack="mdi" name={icon} size={20} />
  <span>{label}</span>
</div>
